{% extends 'base.html.twig' %}

{% block title %}Intervention index{% endblock %}

{% block body %}
    <h1>Intervention index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Technicien</th>
                <th>Entreprise</th>
                <th>Type</th>
                <th>InterventionDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for intervention in interventions %}
            <tr>
                <td>{{ intervention.id }}</td>
                <td>{{ intervention.technicien }}</td>
                <td>{{ intervention.entreprise }}</td>
                <td>{{ intervention.type }}</td>
                <td>{{ intervention.interventionDate ? intervention.interventionDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_intervation_show', {'id': intervention.id}) }}">show</a>
                    <a href="{{ path('app_intervation_edit', {'id': intervention.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_intervation_new') }}">Create new</a>
{% endblock %}
