{% extends 'base.html.twig' %}

{% block title %}Equipement{% endblock %}

{% block body %}
    <h1>Equipement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipement.id }}</td>
            </tr>
            <tr>
                <th>InstallationDate</th>
                <td>{{ equipement.installationDate ? equipement.installationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>SerialNumber</th>
                <td>{{ equipement.serialNumber }}</td>
            </tr>
            <tr>
                <th>LocationDetail</th>
                <td>{{ equipement.locationDetail }}</td>
            </tr>
            <tr>
                <th>ProductType</th>
                <td>{{ equipement.productType }}</td>
            </tr>
            <tr>
                <th>PlacementType</th>
                <td>{{ equipement.placementType }}</td>
            </tr>
            <tr>
                <th>RemoteNumber</th>
                <td>{{ equipement.remoteNumber }}</td>
            </tr>
            <tr>
                <th>GasWeight</th>
                <td>{{ equipement.gasWeight }}</td>
            </tr>
            <tr>
                <th>LeakDetection</th>
                <td>{{ equipement.leakDetection ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>LastLeakDetection</th>
                <td>{{ equipement.lastLeakDetection ? equipement.lastLeakDetection|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NextLeakControl</th>
                <td>{{ equipement.nextLeakControl ? equipement.nextLeakControl|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Finality</th>
                <td>{{ equipement.finality ? equipement.finality|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ equipement.capacity }}</td>
            </tr>
            <tr>
                <th>Picto</th>
                <td>{{ equipement.picto }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipement_index') }}">back to list</a>

    <a href="{{ path('app_equipement_edit', {'id': equipement.id}) }}">edit</a>

